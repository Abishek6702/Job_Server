    <table role="presentation" class="container">
      <tr>
        <td class="header">
          <img src="cid:changePasswordLogo" alt="Password Changed" />
        </td>
      </tr>
      <tr>
        <td class="content">
          <div class="title">Password Changed Successfully</div>
          <p class="message">
            Hello
            {{name}},<br />
            Your Chnaging password<br />
            <div class="otp">{{otp}}</div>

            If you did not authorize this change, please contact support
            immediately.
          </p>

        </td>
      </tr>
      <tr>
        <td class="footer">
